{# To trigger the delete modal: 
    - add class "js-button-delete" inside the delete button element 
    - add data-url with your endpoint inside the delete button element
    - include modal.js file in your template
#}
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalTitle">Delete Message</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete?
                <form method="POST" id="deleteModalForm">
                    {% import "form/_form.html.twig" as _form %}
                    {{ _form.input_csrf(csrf_token()) }}
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary px-5" data-dismiss="modal">No</button>
                <button type="button" id="deleteModalButton" class="btn btn-danger px-5">Yes</button>
            </div>
        </div>
    </div>
</div>