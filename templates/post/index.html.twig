{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-12 col-md-9">
            {% for post in posts %}
                <div class="media">
                    <div class="media-body">
                        <h4><a href="{{ path('post_show', {slug: post.slug}) }}">{{ post.title }}</a></h4>
                        <p>{{ post.lead }}</p>
                    </div>
                </div>
                <hr>
            {% endfor %}
        </div>
    </div>
{% endblock %}
