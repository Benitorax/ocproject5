{% extends 'base.html.twig' %}
{% import "form/_form.html.twig" as _form %}

{% block title %}Login{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-12 col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title text-center">Login</h5>
                    <form name="login" method="POST">
                        {{ _form.message_csrf(form) }}
                        <div class="form-group">
                            <label for="email">Email address</label>
                            <input type="email" class="form-control" name="email"  id="email" aria-describedby="emailHelp" value="{{ form.email }}" maxlength="50" required>
                            {% if form.errors.email is not null %}<div class="invalid-feedback">{{ form.errors.email }}</div>{% endif %}
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" name="password" id="password" maxlength="50" required>
                            {% if form.errors.password is not null %}<div class="invalid-feedback">{{ form.errors.password }}</div>{% endif %}
                        </div>
                        <div class="form-group form-check">
                            <input type="checkbox" class="form-check-input" name="rememberme" id="rememberme" {% if form.rememberme %}checked{% endif %}>
                            <label class="form-check-label" for="rememberme">Remember me</label>
                        </div>
                        {{ _form.input_csrf(csrf_token()) }}
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                    <p class="mt-4"><a href="{{ path('password_reset_request') }}">Forgot your password?</a></p>
                </div>
            </div>    
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="/css/form.css">
{% endblock %}