{% extends 'base.html.twig' %}
{% import "form/_form.html.twig" as _form %}

{% block title %}Password reset request{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-12 col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title text-center">Password reset request</h5>
                    <form method="POST">
                        {{ _form.message_csrf(form) }}
                        <div class="form-group">
                            <label for="email">Email address</label>
                            <input type="email" class="form-control" name="email"  id="email" value="{{ form.email }}" maxlength="50" required>
                            {% if form.errors.email is not null %}<div class="invalid-feedback">{{ form.errors.email }}</div>{% endif %}
                        </div>
                        {{ _form.input_csrf(csrf_token()) }}
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>
            </div>    
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="/css/form.css">
{% endblock %}