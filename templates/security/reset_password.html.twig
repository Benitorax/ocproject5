{% extends 'base.html.twig' %}
{% import "form/_form.html.twig" as _form %}

{% block title %}Reset password{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-12 col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title text-center">Set your new password</h5>
                    <form method="POST">
                        {{ _form.message_csrf(form) }}
                        <div class="form-group">
                            <label for="password1">Password</label>
                            <input type="password" class="form-control" name="password1"  id="password1" value="{{ form.email }}" maxlength="50" required>
                            {% if form.errors.password1 is not null %}<div class="invalid-feedback">{{ form.errors.password1 }}</div>{% endif %}
                        </div>
                        <div class="form-group">
                            <label for="password2">Repeat password</label>
                            <input type="password" class="form-control" name="password2"  id="password2" value="{{ form.email }}" maxlength="50" required>
                            {% if form.errors.password2 is not null %}<div class="invalid-feedback">{{ form.errors.password2 }}</div>{% endif %}
                        </div>
                        {{ _form.input_csrf(csrf_token()) }}
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>
            </div>    
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="/css/form.css">
{% endblock %}